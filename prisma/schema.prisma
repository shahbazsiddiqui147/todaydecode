// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum RiskLevel { 
  LOW
  MEDIUM
  HIGH
  CRITICAL 
}

enum Region { 
  GLOBAL
  MENA
  APAC
  EUROPE
  AMERICAS
  AFRICA 
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Article {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  onPageLead      String?   @db.Text // Distinct from SEO metaDescription
  summary         String    @db.Text
  content         String    @db.Text
  status          ArticleStatus @default(DRAFT)
  isFeatured      Boolean   @default(false)
  
  // Data-Driven Attributes
  region          Region    @default(GLOBAL)
  riskLevel       RiskLevel @default(MEDIUM)
  riskScore       Int       // 1-100 gauge
  impactScore     Int       // 1-100 strategic weight
  
  // Scenario Forecast (Best/Most Likely/Worst)
  scenarios       Json?     
  
  // SEO & AEO
  faqData         Json?     // For Google SGE/AI citation
  metaTitle       String?
  metaDescription String?
  
  publishedAt     DateTime  @default(now())
  authorId        String
  author          Author    @relation(fields: [authorId], references: [id])
  categoryId      String
  category        Category  @relation(fields: [categoryId], references: [id])
  savedBy         SavedAnalysis[]
  isPremium       Boolean   @default(false)
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique // Geopolitics, Economy, etc.
  slug        String   @unique // e.g., "geopolitics/"
  description String?  @db.Text
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  icon        String?  // Lucide icon name or SVG path

  articles    Article[]
  watchlists  Watchlist[]
}

model Author {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  image        String?
  role         String
  bio          String   @db.Text
  expertise    String[] // Analyst Expertise (e.g., ["Cyber", "MENA"])
  socialLinks  Json?    // { twitter, linkedin, website }
  
  articles     Article[]
}

// --- Identity & Access (NextAuth) ---

enum UserRole {
  ADMIN
  ANALYST
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(ANALYST)
  accounts      Account[]
  sessions      Session[]
  
  // Intelligence Personalization
  watchlists    Watchlist[]
  savedAnalyses SavedAnalysis[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Intelligence Personalization ---

model Watchlist {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  region      Region?  // Can follow a region directly
  createdAt   DateTime @default(now())

  @@unique([userId, categoryId, region])
}

model SavedAnalysis {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, articleId])
}

